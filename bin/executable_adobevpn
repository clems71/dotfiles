#!/bin/sh

OPENCONNECT=$(which openconnect)
VPN_SLICE=$(which vpn-slice)

echo using $OPENCONNECT
echo using $VPN_SLICE

SLICES="$VPN_SLICE itcpki.corp.adobe.com www.stage.adobe.com stage.adobe.com www.qa01.adobe.com qa01.adobe.com zerobin.corp.adobe.com git.corp.adobe.com jira.corp.adobe.com wiki.corp.adobe.com icons.corp.adobe.com inside.corp.adobe.com react-spectrum.corp.adobe.com spectrum.corp.adobe.com iam.corp.adobe.com myguest.corp.adobe.com sjshare.corp.adobe.com mpki-linux.corp.adobe.com circle.ci.adobeitc.com circle.ci-aws-stg.adobeitc.com a4u-gateway.paas.corp.adobe.com artifactory.corp.adobe.com iam.corp.adobe.com spectrum-contributions.corp.adobe.com precursors.s3-sj1.corp.adobe.com compinternal.corp.adobe.com securitybelt.corp.adobe.com imss.corp.adobe.com adobe.trust-adobe.console.banyanops.com console-stage.adobe.io admin-stage.adobe.io ccxbuild-jms01.corp.adobe.com assets-stage.adobecc.com dev02.adobe.com www.dev02.adobe.com smartspend.corp.adobe.com vault.corp.adobe.com vault.or1.adobe.net 54.213.92.117 api.k8s.dev.substance3d.io 10.50.227.144 10.50.227.145 10.50.227.146 stage.adobe.com"

if [ -z $BW_SESSION ]; then
  echo "Need to unlock Bitwarden to access PIN and OTP values"
  export BW_SESSION=$(bw unlock --raw)
fi

PIN=$(bw get item 'AdobeID Corporate' | jq '.fields[] | select(.name == "PinCode") | .value' -r)
OTP=$(bw get totp 'AdobeID Corporate')
PASS=$PIN$OTP

echo $PASS | sudo $OPENCONNECT --passwd-on-stdin -u cjacob -s "$SLICES" --authgroup=ADOBEOTP https://asa-dublin-1.adobe.com 
#echo $PASS | sudo openconnect --protocol=gp dublin.vpn.adobe.com
